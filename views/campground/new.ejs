<% layout('layout/boilerplate') %>
<div class="col-6 offset-3">
    <h1 class="text-center">Create a campground</h1>
    <form action="/campground" method='post' novalidate class="needs-validation">
        <div class="mb-3">
            <label for="campgroundTitle" class="form-label">Title</label>
            <input type="text" class="form-control" id="campgroundTitle" name="campground[title]" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label for="campgroundLocation" class="form-label">Location</label>
            <input type="text" class="form-control" id="campgroundLocation" name="campground[location]" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label for="campgroundPrice" class="form-label">Price</label>
            <div class="input-group">
                <span class="input-group-text" id="price-label">$</span>
                <input type="text" class="form-control" id="campgroundPrice" name="campground[price]" aria-describedby="price-label" required>
            </div>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label for="campgroundDescription" class="form-label">Description</label>
            <input type="text" class="form-control" id="campgroundDescription" name="campground[description]" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label for="campgroundImage" class="form-label">Image Url</label>
            <input type="text" class="form-control" id="campgroundImage" name="campground[image]" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <a href="/campground">Home</a>
</div>







